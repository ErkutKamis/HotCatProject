@model UpdateProductDTO
@{
    ViewData["Title"] = "BuyProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Buy Product
        </header>
        <div class="panel-body">
            <div class="alert-error text-error">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-error alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Error!
                        </h4>
                        <p>@TempData["message"]</p>
                    </div>
                }
            </div>
            <form method="post" role="form" enctype="multipart/form-data" asp-action="BuyProduct">
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input type="text" class="form-control round-input" asp-for="ProductName" readonly="readonly" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitsInStock">Purchase quantity</label>
                    <input type="number" class="form-control round-input" name="quantity" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="UnitPrice" />
                    <input type="hidden" asp-for="UnitsInStock" />
                    <input type="hidden" asp-for="ImagePath" />
                    <input type="hidden" asp-for="Description" />
                    <input type="hidden" asp-for="CategoryID" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="UpdatedDate" />
                    <input type="hidden" asp-for="DeletedDate" />
                </div>
                @*<button type="submit" class="btn btn-info">Buy</button>*@
                <td>
                    <a asp-area="Purchase" asp-controller="Home" asp-action="Index"  class="btn btn-primary btn-xs icon-pencil">Buy</a>
                </td>
            </form>

        </div>
    </section>
</div>

